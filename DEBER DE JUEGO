        <center>
            <input type="text" id="cuadro1" name="cuadro" onblur="evaluaringresar(this.value)"/> 
            <input type="text" id="cuadro2" name="cuadro" onblur="evaluaringresar(this.value)"/> 
            <input type="text" id="cuadro3" name="cuadro" onblur="evaluaringresar(this.value)"/></br>
            <input type="text" id="cuadro4" name="cuadro" onblur="evaluaringresar(this.value)"/> 
            <input type="text" id="cuadro5" name="cuadro" onblur="evaluaringresar(this.value)"/> 
            <input type="text" id="cuadro6" name="cuadro" onblur="evaluaringresar(this.value)"/></br>
            <input type="text" id="cuadro7" name="cuadro" onblur="evaluaringresar(this.value)"/> 
            <input type="text" id="cuadro8" name="cuadro" onblur="evaluaringresar(this.value)"/> 
            <input type="text" id="cuadro9" name="cuadro" onblur="evaluaringresar(this.value)"/></br>
            <a href="index.html"><input type="button" value="Reiniciar Juego"/></a><br>
